<schemalist>
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@" path="@EINA_SLASHED_DOMAIN_R@/">
    <child name="preferences" schema="@EINA_DOMAIN@.preferences"/>
    <child name="states"      schema="@EINA_DOMAIN@.states"     />
    <!-- plugins -->
    <key name="plugins" type="as">
      <default>[]</default>
      <_summary>Plugins to load</_summary>
    </key>
    <key name="prefer-dark-theme" type="b">
      <default>true</default>
      <_summary>Prefer dark theme</_summary>
    </key>
  </schema>

  <!--
  preferences
  -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences" path="@EINA_SLASHED_DOMAIN_R@/preferences/">
    <child name="dock"     schema="@EINA_DOMAIN@.preferences.dock"     />
    <child name="lastfm"   schema="@EINA_DOMAIN@.preferences.lastfm"   />
    <child name="lomo"     schema="@EINA_DOMAIN@.preferences.lomo"     />
    <child name="muine"    schema="@EINA_DOMAIN@.preferences.muine"    />
    <child name="ntfy"     schema="@EINA_DOMAIN@.preferences.ntfy"     />
    <child name="player"   schema="@EINA_DOMAIN@.preferences.player"   />
    <child name="playlist" schema="@EINA_DOMAIN@.preferences.playlist" />
  </schema>

  <!-- dock -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.dock" path="@EINA_SLASHED_DOMAIN_R@/preferences/dock/">
  <key name="expanded" type="b">
      <default>true</default>
	  <_summary>Whatever dock is expanded or not</_summary>
    </key>
    <key name="window-width" type="i">
      <default>1</default>
      <_summary>Main window width</_summary>
    </key>
    <key name="window-height" type="i">
      <default>1</default>
      <_summary>Main window height</_summary>
    </key>
	<key name="page-order" type="as">
		<default>[]</default>
		<_summary>Order for dock widgets</_summary>
	</key>
  </schema>

  <!-- lastfm -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.lastfm" path="@EINA_SLASHED_DOMAIN_R@/preferences/lastfm/">
    <key name="submit-enabled" type="b">
      <default>false</default>
      <_summary>Enable submission to LastFM</_summary>
    </key>
    <key name="username" type="s">
      <default>''</default>
      <_summary>LastFM username</_summary>
    </key>
    <key name="password" type="s">
      <default>''</default>
      <_summary>LastFM password</_summary>
    </key>
  </schema>

  <!-- lomo -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.lomo" path="@EINA_SLASHED_DOMAIN_R@/preferences/lomo/">
    <key name="volume" type="i">
      <default>50</default>
      <_summary>Volume</_summary>
    </key>
    <key name="mute" type="b">
      <default>false</default>
	  <_summary>Set mute</_summary>
    </key>
    <key name="random" type="b">
      <default>false</default>
	  <_summary>Enable random mode</_summary>
    </key>
	<key name="repeat" type="b">
      <default>false</default>
	  <_summary>Enable repeat mode</_summary>
    </key>
    <key name="auto-play" type="b">
      <default>false</default>
	  <_summary>Automatically play streams</_summary>
    </key>
    <key name="auto-parse" type="b">
      <default>true</default>
	  <_summary>Automatically parse metadata on streams</_summary>
    </key>
	<key name="gapless-mode" type="b">
      <default>false</default>
	  <_summary>Enable gapless-mode</_summary>
    </key>
	<key name="current-stream" type="i">
	  <default>0</default>
	  <_summary>Current stream</_summary>
	</key>
  </schema>

  <!-- muine -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.muine" path="@EINA_SLASHED_DOMAIN_R@/preferences/muine/">
    <key name="group-by" type="i">
      <default>0</default>
	  <_summary>Group streams based on this field</_summary>
    </key>
  </schema>

  <!-- ntfy -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.ntfy" path="@EINA_SLASHED_DOMAIN_R@/preferences/ntfy/">
    <key name="enabled" type="b">
      <default>true</default>
	  <_summary>Enable notifications</_summary>
    </key>
  </schema>


  <!-- player -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.player" path="@EINA_SLASHED_DOMAIN_R@/preferences/player/">
  </schema>

  <!-- playlist -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.preferences.playlist" path="@EINA_SLASHED_DOMAIN_R@/preferences/playlist/">
    <key name="stream-markup" type="s">
      <default>'{%a -} %t'</default>
      <_summary>Format to use for display stream title's</_summary>
    </key>
  </schema>

  <!--
  states
  -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.states"      path="@EINA_SLASHED_DOMAIN_R@/states/">
    <child name="file-chooser" schema="@EINA_DOMAIN@.states.file-chooser" />
  </schema>

  <!-- filechooser -->
  <schema gettext-domain="@GETTEXT_PACKAGE@" id="@EINA_DOMAIN@.states.file-chooser" path="@EINA_SLASHED_DOMAIN_R@/states/file-chooser/">
    <key name="last-folder" type="s">
      <default>''</default>
      <_summary>Last used folder for file chooser</_summary>
    </key>
  </schema>

</schemalist>
